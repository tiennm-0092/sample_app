<% provide :title, t(".forgot_title") %>
<h1><%= t ".heading" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :password_reset, local: true, class: "form-horizontal",
        role: "form", url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t(".forget_create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
