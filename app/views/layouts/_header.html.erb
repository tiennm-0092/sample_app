<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo_alt"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_header"), root_path %></li>
        <li><%= link_to t(".help_header"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users_header"), '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account_header" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_header"), current_user %></li>
              <li><%= link_to t(".setting_header"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out_header"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login_header"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
