<li id="micropost-<%= micropost.id %>">
  <%= link_to gravartar_for(micropost.user, size: Settings.gravartar.size_list), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t ".prefix_time" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".suffix_time" %>
    <% if current_user? micropost.user %>
      <%= link_to t(".delete_link"), micropost, method: :delete,
        data: { confirm: t(".delete_confirm") } %>
    <% end %>
  </span>
</li>
