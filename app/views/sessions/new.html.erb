<% provide :title, t(".login_title") %>
<h1><%= t ".heading" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :sessions, local: true, class: "form-horizontal",
        role: "form", url: login_path do |f| %>
      <%= f.label :email, t(".email_login") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".password_login")%>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t(".sessions_create"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %> <%= link_to t(".signup_now"), signup_path %></p>
  </div>
</div>
